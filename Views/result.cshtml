@Html.Partial("header.cshtml")
<container class="results">
  <div class="row">
    <h1>All right! You searched the sentence!</h1>
    <div class="col-md-4">
      <ul>
      @foreach (var count in @Model)
      {
        <li id="search_word">You searched for: @count.GetWord()</li>
        <li id="sentence">In this sentence: @count.GetSentence()</li>
        <li id="count">And it matched: @count.GetCount() times</li>
      }
    </div>
    <div class="col-md-4">
      <a href="/"><img src="/Content/img/more.jpg" alt="add another search"></a>
    </div>
    <div class="col-md-4">
      <form action="/boom" method="post">
        <button><img src="/Content/img/boom.png" id="boom"></button>
      </form>
    </div>
  </div>
</div>
